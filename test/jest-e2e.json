{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/../src/$1"
  },
  "testTimeout": 120000,
  "verbose": true,
  "detectOpenHandles": true,
  "forceExit": true,
  "silent": false,
  "maxWorkers": 1,
  "setupFilesAfterEnv": ["<rootDir>/setup.ts"],
  "globals": {
    "ts-jest": {
      "isolatedModules": true
    }
  }
}
